<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/cardStyle">
    <RelativeLayout
        android:id="@+id/animalSoundCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/animalSoundCardImage"
            style="@style/cardImageViewStyle"
            android:contentDescription="@string/animalsSound"
            android:src="@drawable/animalsound"/>

        <TextView
            style="@style/cardTextViewStyle"
            android:id="@+id/animalSoundText"
            android:text="@string/animalsSound" />
    </RelativeLayout>


</android.support.v7.widget.CardView>

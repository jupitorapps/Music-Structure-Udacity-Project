<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="8dp"
        tools:context="com.example.lenovo.first.project4musicstructure.MainActivity"
        android:orientation="vertical">

        <!-- card view -->
        <TextView
            style="@style/headerTitleTextView"
            android:text="@string/ringtoneStore" />
        <TextView
            style="@style/headerTitleTextView"
            android:text="@string/ringtoneStoreDetails"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
        <include layout="@layout/hindisong_card"/>
        <include layout="@layout/djmix_card"/>
        <include layout="@layout/animal_sound"/>
        <include layout="@layout/othersound_card"/>

    </LinearLayout>


</ScrollView>

